@model GigHub.ViewModels.GigDetailsViewModel

@{
    /**/

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 id="gigDetails">
    @Model.Gig.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info btn-sm js-toggle-follow" data-user-id="@Model.Gig.ArtistId"> Following </button>
        }

        else
        {
            <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@Model.Gig.ArtistId"> Follow </button>

        }

    }


</h2>

<p>Performing at @Model.Gig.Venue on  @Model.Gig.DateTime.ToString("d MMM") at  @Model.Gig.DateTime.ToString("HH:mm")</p>
<p></p> <span></span>



@if (User.Identity.IsAuthenticated && Model.IsGoing)
{
    <p>Going</p>
}



@section scripts
{
    <script>
        $(document).ready(function () {

            GigsDetailsController.init('#gigDetails');

        });

    </script>
}