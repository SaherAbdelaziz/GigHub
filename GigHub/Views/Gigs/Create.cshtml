@model GigHub.ViewModels.GigViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Gig </h2>

@using (Html.BeginForm("Create", "Gigs"))
{
    <p class="alert alert-info"> All Fields are <strong>Required</strong>. </p>

    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control" , autofocus="autofocus" })
        @Html.ValidationMessageFor(g => g.Venue)
    </div>


    <div class="form-group">
        @Html.LabelFor(g => g.DateTime)
        @Html.TextBoxFor(g => g.DateTime, new { @class = "form-control", @type = "datetime-local" })
        @Html.ValidationMessageFor(g => g.DateTime)

    </div>

    <div class="form-group">
        @Html.LabelFor(g => g.Genre)
        @Html.DropDownListFor(g => g.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Genre)
    </div>
    <!--<input type="datetime-local" name="Time"/>-->
    <button class="btn btn-primary" type="submit">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
